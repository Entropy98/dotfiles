  client.unfocused #5C82A9 #83BE5D #83BE5D #83BE5D
  client.urgent #83BE5D #83BE5D #3A523F #83BE5D
  client.placeholder #3A523F #3A523F #83BE5D #83BE5D

#lock
bindsym Mod4+l exec "i3lock -t -i ~/Pictures/Wallpapers/Lost.png"

#background
exec --no-startup-id "feh --bg-center --no-xinerama ~/Pictures/Wallpapers/Lost.png"

#transparency
exec --no-startup-id picom -CGb

for_window [class="^.*"] border pixel 3

#gaps

gaps inner 10
gaps outer 5

